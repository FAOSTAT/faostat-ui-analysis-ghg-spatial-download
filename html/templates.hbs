<script type='text/x-handlebars-template' id='main_structure'>
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-xs-12 col-sm-12 col-md-12 col-lg-12'>
                <h1>{{title}}</h1>
            </div>
        </div>
        <div class='row'>
            <div class='col-xs-4'>
                <h4>{{select_a_country}}</h4>
                <div id='{{country_selector_id}}'></div>
            </div>
        </div>
        <div class='row'>
            <div class='col-xs-12'>
                <h4>{{product_list}}</h4>
                <div class="panel-group fs-geospatial-download-product-list" id="{{accordion_datatype_id}}" role="tablist" aria-multiselectable="true"></div>
            </div>
        </div>
    </div>
</script>

<script type='text/x-handlebars-template' id='accordion_datatype'>
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="{{datatype_heading_id}}">
            <h4 class="panel-title">
                <i class="fa fa-chevron-right"></i>
                <a data-toggle="collapse" data-parent="#{{accordion_datatype_id}}" href="#{{datatype_products_id}}" aria-expanded="false" aria-controls="{{datatype_products_id}}">
                    {{title}}
                </a>
            </h4>
        </div>
        <div id="{{datatype_products_id}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="{{datatype_heading_id}}">
            <div class="panel-body">
                <ul class="list-group" id="{{products_list_id}}"></ul>
            </div>
        </div>
    </div>
</script>

<script type='text/x-handlebars-template' id='product_structure'>
    <li class="list-group-item">
        <h3>{{title}}</h3>
        <p>{{description}}</p>
        <div class="row">
            <div class='col-xs-12'>
                <button type='button' class='btn btn-primary pull-right' id="{{download_button_id}}">
                    <!--<i class="fa fa-download"></i>-->
                    {{download_layers}}
                </button>
            </div>
        </div>
        <!--<button type='button' class='btn btn-primary' id="{{download_button_id}}">{{download_layers}}</button>-->
    </li>
</script>
